/* pages/chat/chat.wxss */
@import "../template/template.wxss" ;
page{
  height: 100%
}
.container{
  width: 100%;
  height:100%;
  background-color: rgba(220,220,220,0.8);
  position: relative;
  padding: 0
}
 .content{
  width: 100%;
  height: 100%;
}
scroll-view{
  height: 90%;
}
textarea{
background-color:white;
width: 70%;
margin-left: 15px;
height: 30px;
float: left;
line-height: 30px;
border-radius: 5px
}
form{
  width: 100%;
  position: absolute;
  bottom: 10px;
}
button{
  width: 18%;
  font-size: 12px
}
 ::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent
} 